<header>
	<nav class="be-green white large-padding">
		<ul class="no-list row center-xs middle-xs">
			<li class="col-xs">
				<h1 id="logo" class="no-margin"><%= link_to "Memomiliano", root_path %></h1>
			</li>
			<li class="col-xs">
				<%= link_to "Artículos", articles_path %>
			</li>
			<% @categories.each do |category| %>
				<li class="col-xs">
					<%= link_to category.name, category %>
				</li>
			<% end %>
			<% if user_signed_in? %>
				<li class="col-xs">
					<%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete%>
				</li>
			<% else %>
				<li class="col-xs">
					<%= link_to "Iniciar sesión", new_user_session_path %>
				</li>
				<li class="col-xs">
					<%= link_to "Crear cuenta", new_user_registration_path %>
				</li>
			<% end %>
		</ul>
	</nav>
</header>