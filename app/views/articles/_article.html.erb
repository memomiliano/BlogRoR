<div class="col-md-4 top-space">
	<div class="box relative article-height">
		<div class="absolute article-height background-cover" style="background:url(<%= article.cover.url(:thumb) %>); width:100%; top:0px; left:0px;"></div>
		<div class="absolute article-height background-cover" style="background:rgba(0,0,0,0.5); width:100%; top:0px; left:0px;"></div>
		<div class="relative white text-center">
			<h2><%= link_to article.title, article %></h2>
			<p>
				<%= truncate(article.body,length:30) %>
			</p>
		</div>
	</div>
</div>