<% @articles.each do |article| %>
	<h1><%= link_to article.title, article %></h1>
	<p><%= article.body %> - <%= link_to "Eliminar", article, method: :delete, class: "red" %> 
	<% if article.may_publish? %>
	 -	<%= link_to "Publicar", "/articles/#{article.id}/publish", class: "blue", method: :put %></p>
	<% end %>
<% end %>